#import "UITools.h"

@implementation UITools

+ (UIView *)createViewWithFrame:(CGRect)frame backgroundColor:(UIColor *)color{
    UIView *view = [[UIView alloc] init];
    view.backgroundColor = color;
    view.frame = frame;
    return view;
}

+ (UILabel *)createLabelWithFrame:(CGRect)frame fontNumber:(NSInteger)fontNumber text:(NSString *)text{
    UILabel *label = [[UILabel alloc] init];
    label.frame = frame;
    label.font = [UIFont systemFontOfSize:fontNumber];
    label.text = text;
    return label;
}

+ (UITextField *)createTextFiledWithFrame:(CGRect)frame fontNumber:(NSInteger)fontNumber placeText:(NSString *)placeText{
    UITextField *textFiled = [[UITextField alloc] init];
    textFiled.frame = frame;
    textFiled.font = [UIFont systemFontOfSize:fontNumber];
    textFiled.placeholder = placeText;
    return textFiled;
}



@end
